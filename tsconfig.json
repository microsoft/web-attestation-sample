{
  "compilerOptions": {
    "allowJs": true,
    "lib": [
      "ES2020",
      "DOM"
    ],
    "module": "ES2020",
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2020",
    "noUnusedLocals": false,
    "moduleResolution": "node",
  },
  "include": [
    "src/**/*.ts",
    "rollup.config.js",
    "hide/uprove.d.ts"
  ]
}