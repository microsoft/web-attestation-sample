{
    "manifest_version": 3,
    "name": "uprove-token-extension",
    "version": "1.0",
    "permissions": [
        "storage",
        "scripting",
        "contextMenus",
        "activeTab"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "type": "module"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "options_ui": {
        "page": "options.html"
    },
    "icons": {
        "128": "icons/checkmark128x128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "icons/checkmark.svg",
                "icons/invalid.svg",
                "icons/warning.svg"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}